{
  "manifest_version": 3,
  "name": "SecurePass",
  "version": "1.0.0",
  "description": "Gerenciador de senhas SecurePass para uma navegação mais segura.",
  "permissions": [
    "storage",
    "activeTab",
    "notifications",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "securepass@maindug.com",
      "strict_min_version": "109.0"
    },
    "gecko_android": {
      "strict_min_version": "120.0"
    }
  }
}