{
  "manifest_version": 3,
  "name": "SecurePass - Gerenciador de Senhas",
  "version": "1.0.0",
  "description": "Gerencie suas senhas com seguran√ßa e facilidade",
  "author": "SecurePass Team",
  "homepage_url": "https://securepass.com",
  
  "permissions": [
    "storage",
    "activeTab",
    "tabs",
    "contextMenus",
    "notifications",
    "clipboardWrite"
  ],
  
  "host_permissions": [
    "http://localhost:5000/*",
    "<all_urls>"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "SecurePass - Gerenciador de Senhas"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}